- content_for :styles do
  %link{ :href => "css/viewer.css", :rel => "stylesheet", :type => "text/css" }

- content_for :scripts do
  %script{ :src => "javascript/jquery.highlight.min.js", :type => "text/javascript" }
  %script{ :src => "javascript/compatibility.js", :type => "text/javascript" }
  %script{ :src => "javascript/l10n.js", :type => "text/javascript" }
  %script{ :src => "javascript/viewer.min.js", :type => "text/javascript" }
  %script{ :src => "javascript/build/pdfjs.min.js", :type => "text/javascript" }
  :javascript
    PDFJS.workerSrc = 'javascript/build/pdfjs.min.js'
    $.extend(Reconciler.settings, { "token" : "#{@upload[:token]}", "file" : "#{@upload[:file_path]}" });

#outerContainer

  #sidebarContainer

    #toolbarSidebar{:class => 'splitToolbarButton toggled' }
      %button#viewThumbnail{:class => 'toolbarButton group toggled', :title => 'Show Thumbnails', :onclick => 'PDFView.switchSidebarView(\'thumbs\');', :tabindex => '1', 'data-l10n-id' => 'thumbs'}
        %span{'data-l10n-id' => 'thumbs_label'} Thumbnails
      %button#viewOutline{:class => 'toolbarButton group', :title => 'Show Document Outline', :onclick => 'PDFView.switchSidebarView(\'outline\');', :tabindex => '2', 'data-l10n-id' => 'outline'}
        %span{'data-l10n-id' => 'outline_label'} Document Outline
      %button#viewNames{:class => 'toolbarButton group', :title => 'Show Names', :onclick => 'PDFView.switchSidebarView(\'names\');', :tabindex => '3', 'data-l10n-id' => 'names_panel'}
        %span{'data-l10n-id' => 'names_panel_label'} Show Names
      %button#viewSearch{:class => 'toolbarButton group', :title => 'Search Document', :onclick => 'PDFView.switchSidebarView(\'search\');', :tabindex => '4', 'data-l10n-id' => 'search_panel'}
        %span{'data-l10n-id' => 'search_panel_label'} Search Document

    #sidebarContent
      #thumbnailView
      #outlineView.hidden
      #namesView.hidden
      #searchView.hidden
        #searchToolbar
          %input{:id => 'searchTermsInput', :class => 'toolbarField', :onkeydown => 'if (event.keyCode == 13) { PDFView.search(); }'}
          %button{:id => 'searchButton', :class => 'textButton toolbarButton', :onclick => 'PDFView.search();', 'data-l10n-id' => 'search'} Find
        #searchResults

  #mainContainer
    %div.toolbar
      #toolbarContainer
        #toolbarViewer
          #toolbarViewerLeft
            %button{:id => 'sidebarToggle', :class => 'toolbarButton', :title => 'Toggle Sidebar', :tabindex => '4', 'data-l10n-id' => 'toggle_slider'}
              %span{'data-l10n-id' => 'toggle_slider_label'} Toggle Sidebar
            %div.toolbarButtonSpacer
            %div.splitToolbarButton
              %button{:id => 'previous', :class => 'toolbarButton pageUp', :title => 'Previous Page', :onclick => 'PDFView.page--', :tabindex => '5', 'data-l10n-id' => 'previous'}
                %span{'data-l10n-id' => 'previous_label'} Previous
              .splitToolbarButtonSeparator
              %button{:id => 'next', :class => 'toolbarButton pageDown', :title => 'Next Page', :onclick => 'PDFView.page++', :tabindex => '6', 'data-l10n-id' => 'next'}
                %span{'data-l10n-id' => 'next_label'} Next
            %label{:id => 'pageNumberLabel', :class => 'toolbarLabel', :for => 'pageNumber', 'data-l10n-id' => 'page_label'} Page:
            %input{:type => 'number', :id => 'pageNumber', :class => 'toolbarField pageNumber', :onchange => 'PDFView.page = this.value;', :value => '1', :size => '4', :min => '1', :tabindex => '7'}
            %span{:id => 'numPages', :class => 'toolbarLabel'}

          #toolbarViewerRight
            %input{:id => 'fileInput', :class => 'fileInput', :type => 'file', :oncontextmenu => 'return false;', :style => 'visibility: hidden; position: fixed; right: 0; top: 0'}
            %button{:id => 'fullscreen', :class => 'toolbarButton fullscreen', :title => 'Fullscreen', :tabindex => '11', 'data-l10n-id' => 'fullscreen', :onclick => 'PDFView.fullscreen();'}
              %span{'data-l10n-id' => 'fullscreen_label'} Fullscreen
            %button{:id => 'print', :class => 'toolbarButton print', :title => 'Print', :tabindex => '13', 'data-l10n-id' => 'print', :onclick => 'window.print();'}
              %span{'data-l10n-id' => 'print_label'} Print
            %a{:href => '#', :id => 'viewBookmark', :class => 'toolbarButton bookmark', :title => 'Current view (copy or open in new window)', :tabindex => '15', 'data-l10n-id' => 'bookmark'}
              %span{'data-l10n-id' => 'bookmark_label'} Current View


          .outerCenter
            %div{:id => 'toolbarViewerMiddle', :class => 'innerCenter'}
              .splitToolbarButton
                %button{:class => 'toolbarButton zoomOut', :title => 'Zoom Out', :onclick => 'PDFView.zoomOut();', :tabindex => '8', 'data-l10n-id' => 'zoom_out'}
                  %span{'data-l10n-id' => 'zoom_out_label'} Zoom Out
                .splitToolbarButtonSeparator
                %button{:class => 'toolbarButton zoomIn', :title => 'Zoom In', :onclick => 'PDFView.zoomIn();', :tabindex => '9', 'data-l10n-id' => 'zoom_in'}
                  %span{'data-l10n-id' => 'zoom_in_label'} Zoom In

              %span{:id => 'scaleSelectContainer', :class => 'dropdownToolbarButton'}
                %select{:id => 'scaleSelect', :onchange => 'PDFView.parseScale(this.value);', :title => 'Zoom', :oncontextmenu => 'return false;', :tabindex => '10', 'data-l10n-id' => 'zoom'}
                  %option{:id => 'pageAutoOption', :value => 'auto', :selected => 'selected', 'data-l10n-id' => 'page_scale_auto'} Automatic Zoom
                  %option{:id => 'pageActualOption', :value => 'page-actual', 'data-l10n-id' => 'page_scale_actual'} Actual Size
                  %option{:id => 'pageFitOption', :value => 'page-fit', 'data-l10n-id' => 'page_scale_fit'} Fit Page
                  %option{:id => 'pageWidthOption', :value => 'page-width', 'data-l10n-id' => 'page_scale_width'} Full Width
                  %option{:id => 'customScaleOption', :value => 'custom'}
                  %option{:value => '0.5'} 50%
                  %option{:value => '0.75'} 75%
                  %option{:value => '1'} 100%
                  %option{:value => '1.25'} 125%
                  %option{:value => '1.5'} 150%
                  %option{:value => '2'} 200%

    #viewerContainer
      #viewer

    #loadingBox
      #loading
      #loadingBar
        .progress

    #errorWrapper{:hidden => 'true'}
      #errorMessageLeft
        %span{:id => 'errorMessage'}
        %button{:id => 'errorShowMore', :onclick => '', :oncontextmenu => 'return false;', 'data-l10n-id' => 'error_more_info'} More Information
        %button{:id => 'errorShowLess', :onclick => '', :oncontextmenu => 'return false;', 'data-l10n-id' => 'error_less_info'} Less Information
      #errorMessageRight
        %button{:id => 'errorClose', :oncontextmenu => 'return false;', 'data-l10n-id' => 'error_close'} Close
      .clearBoth
      %textarea{:id => 'errorMoreInfo', :hidden => 'true', :readonly => 'readonly'}

#printContainer
  